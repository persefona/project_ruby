<h1>Lista komitetów</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Skrót</th>
      <th>Nr listy</th>
      <th>Logo</th>
      <th>Wojewdztwo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.name %></td>
        <td><%= committee.shortname %></td>
        <td><%= committee.number_of_list %></td>
        <td><%= committee.logo %></td>
        <td><%= link_to 'Pokaż', committee %></td>
        <td><%= link_to 'Edycja', edit_committee_path(committee) %></td>
        <td><%= link_to 'Usuń', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'Dodaj nowy komitet', new_committee_path %>
