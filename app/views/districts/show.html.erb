  <% @district.votes.each do |vote| %>
    <li><strong><%= vote.committee.name %></strong>: <%= vote.amount %></li>
  <% end %>
  </ol>

<br>

<h3> Frekwencja </h3>
  <%= ((@district.ballot.to_f/@district.voter.to_f)*100).round(0) %>%

