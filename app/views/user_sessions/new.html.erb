<h1>Login</h1>
	<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
<p>
	<%= f.label :login %> <br />
	<%= f.text_field :login %>
</p>

<p>
	<%= f.label :password %> <br />
	<%= f.password_field :password %>
</p>

<p>
	<%= f.check_box :remember_me %><%= f.label :remember_me %><br />
</p>

<p>
	<%= f.submit "Login" %>
</p>

<% end %>